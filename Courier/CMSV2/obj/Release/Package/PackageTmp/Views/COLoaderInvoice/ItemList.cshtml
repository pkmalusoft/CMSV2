                </td>
                <td>
                    @item.Content
                </td>
                <td>
                    @item.Pcs
                </td>
                <td style="text-align:right">
                    @item.Weight
                </td>
                <td>
                    @CMSV2.Models.CommanFunctions.GetFormatNumber(@item.Value, _decimal)
                </td>
                <td>
                    @CMSV2.Models.CommanFunctions.GetFormatNumber(@item.COD, _decimal)                    
                </td>          
                <td>
                    @item.Currency
                </td>
            </tr>
        }
