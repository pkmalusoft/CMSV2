@model CMSV2.Models.CODReportParam
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
    var _decimal = Convert.ToInt32(@Session["Decimal"].ToString());
}
<script src="~/Content/NewCSS/plugins/jQuery/moment.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.43/js/bootstrap-datetimepicker.min.js"></script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.43/css/bootstrap-datetimepicker.min.css" />
<link href="/Content/Multiselect/bootstrap-multiselect.css" rel="stylesheet" />
<script src="/Content/Multiselect/bootstrap-multiselect.js"></script>

<section class="content-header">
    <h1 class="headingfont">@ViewBag.ReportName</h1>
</section>
<style>
    #movementid + .btn-group button, #movementid + .btn-group {
        display: block;
        width: 100%;
    }

    .datefilters {
        border: 1px solid #ccc;
        padding: 20px 10px;
        border-radius: 5px;
    }
</style>
<script>
    $(function () {
        $('#FromDate').datetimepicker({ format: 'DD-MM-YYYY' });

    });

    $(function () {
        $('#ToDate').datetimepicker({ format: 'DD-MM-YYYY' });

    });

    $(document).ready(function () {
        $.ajax({
            type: "Get",
            url: "/CustomerInvoice/GetCourierType",
            datatype: "Json",
            success: function (response) {

                var data = response.data;
                $('#movementid').empty();

                $.each(data, function (index, value) {

                    var o_st = $("#MovementId").val().split(",");
                    var flag = 0;
                    for (var j = 0; j < o_st.length; j++) {

                        if (o_st[j] == value.MovementID) {
                            flag = 1;
                            break;
                        }

                    }

                    if (flag == 1) {
                        $('#movementid').append('<option value="' + value.MovementID + '" selected=true>' + value.MovementType + '</option>');
                    }
                    else {
                        $('#movementid').append('<option value="' + value.MovementID + '">' + value.MovementType + '</option>');
                    }

                });



                $('#movementid').multiselect({
                    nonSelectedText: 'Select',
                    enableClickableOptGroups: true,
                    enableCollapsibleOptGroups: true,
                    enableFiltering: false,
                    includeSelectAllOption: true,
                    selectAllValue: 'multiselect-all'
                });

            }
        });

        if ($('#ReportType').val() == 'Date' || $('#ReportType').val() == '' || $('#ReportType').val() == null) {
            $('#chkRegister').prop('checked', 'checked')
        } else {
            $('#GroupBy').val($('#ReportType').val()).trigger('change');
        }

        if ($('#SortBy').val() == '' || $('#SortBy').val() == 'Date Wise' || $('#SortBy').val() == null) {
            $("#chkDateWise").prop('checked', 'checked');
            $('#SortBy').val('Date Wise');
        }
        else {
            $("#chkAWBWise").prop('checked', 'checked');
            $('#SortBy').val('AWB Wise');
        }
        $("#chkRegister").click(function () {
            if ($("#chkRegister").is(':checked')) {
                $("#ReportType").val('Date');
                $("#GroupBy").val('');
            }
            else {
                $("#GroupBy").val('');
                $("#ReportType").val('');

            }
        });

        $("#chkDateWise").click(function () {
            if ($("#chkDateWise").is(':checked')) {
                $("#chkAWBWise").removeAttr('checked');
                $('#SortBy').val('Date Wise');
            }
            else {
                $("#chkAWBWise").prop('checked', 'checked');
                $('#SortBy').val('AWB Wise');
            }
        });

        $("#chkAWBWise").click(function () {
            if ($("#chkAWBWise").is(':checked')) {
                $("#chkDateWise").removeAttr('checked');
                $('#SortBy').val('AWB Wise');
            }
            else {
                $("#chkDateWise").prop('checked', 'checked');
                $('#SortBy').val('Date Wise');
            }
        });
        $('#GroupBy').change(function () {
            if ($('#GroupBy').val() == '') {
                $("#chkRegister").prop('checked', 'checked');
                $('#ReportType').val('Date');
            }
            else {
                $("#chkRegister").removeAttr('checked');
                $('#ReportType').val($('#GroupBy').val());
            }

        })

        $("#btnreport").click(function () {
            if (!$("#chkRegister").is(':checked')) {

                if ($('#GroupBy').val() == '') {
                    alert('Select Group By or !');
                    return false;
                }

                debugger;

            }

        });

    });
</script>
