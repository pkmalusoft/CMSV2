
@model CMSV2.Models.CustomerInvoiceVM
@{
    int i = 0;
    var _decimal = @Session["Decimal"].ToString();
}
<table class="table table-bordered table-responsive" id="details" style="background-color: white">

    <thead>
    <th style="text-align:center">
        SNo.
        All  <input type="checkbox" style="width:20px;" class="Selectall" id="Selectall" value="0" name="Selectall" />
    </th>
    <th width="12%">AWB No.</th>
    <th>AWB Date</th>
    <th width="20%">Consignee</th>
    <th>Destination Country</th>
    <th>Courier Charge</th>    
    <th>Other Charge</th>
    <th>VAT</th>
    <th>Total Charge</th>

    </thead>
    <tbody class="input-table">

        @foreach (var item in Model.CustomerInvoiceDetailsVM)
        {
            <tr>
                <td>
                    @Html.HiddenFor(model => model.CustomerInvoiceDetailsVM[i].CustomerInvoiceDetailID, new { @Value = @item.CustomerInvoiceDetailID })
                    @Html.HiddenFor(model => model.CustomerInvoiceDetailsVM[i].CustomerInvoiceID, new { @Value = @item.CustomerInvoiceID })
                    @Html.HiddenFor(model => model.CustomerInvoiceDetailsVM[i].AWBNo, new { @Value = @item.AWBNo })
                    @Html.HiddenFor(model => model.CustomerInvoiceDetailsVM[i].StatusPaymentMode, new { @Value = @item.StatusPaymentMode })
                    @Html.HiddenFor(model => model.CustomerInvoiceDetailsVM[i].InscanID, new { @Value = @item.InscanID })
                    @Html.HiddenFor(model => model.CustomerInvoiceDetailsVM[i].CourierCharge, new { @Value = @item.CourierCharge })
                    @Html.HiddenFor(model => model.CustomerInvoiceDetailsVM[i].CustomCharge, new { @Value = @item.CustomCharge })
                    @Html.HiddenFor(model => model.CustomerInvoiceDetailsVM[i].OtherCharge, new { @Value = @item.OtherCharge })
                    @Html.HiddenFor(model => model.CustomerInvoiceDetailsVM[i].NetValue, new { @id = "hdnTotalCharge_" + @i })
                    @Html.HiddenFor(model => model.CustomerInvoiceDetailsVM[i].VATAmount, new { })


                    @(i + 1)
                    @Html.CheckBoxFor(model => model.CustomerInvoiceDetailsVM[i].AWBChecked, new { name = "AWBChecked", @class = "checkfilter calfield", style = "margin-left:10px;", @id = "hdnawbchecked_" + @i, @onchange = "ValidateTotal()" })


                </td>
                <td>
                    @item.AWBNo
                </td>
                <td>
                    @CMSV2.Models.CommanFunctions.GetShortDateFormat(@item.AWBDateTime)
                </td>
                <td>
                    @item.ConsigneeName
                </td>
                <td>
                    @item.ConsigneeCountryName
                </td>
                <td class="text-right">
                    @CMSV2.Models.CommanFunctions.GetFormatNumber(@item.CourierCharge, _decimal)
                </td>
                <td class="text-right">
                    @CMSV2.Models.CommanFunctions.GetFormatNumber(@item.OtherCharge, _decimal)
                </td>
                <td class="text-right">
                    @CMSV2.Models.CommanFunctions.GetFormatNumber(@item.VATAmount, _decimal)
                </td>
                <td class="text-right">
                    @CMSV2.Models.CommanFunctions.GetFormatNumber(@item.NetValue, _decimal)
                </td>

                @*<td style="width:101px">
                    <a onclick="deleteAWBItem('@i')" href="javascript:void(0);"><i class="fa fa-times"></i></a>
                </td>*@
            </tr>
            i++;
        }
        <tr class="charegRow">
            <td colspan="5"></td>
            <td>Total Charge</td>
            <td></td>
            <td></td>
            <td class="text-right"> <label class="headinglabel" id="lbltotalcharge"></label></td>
        </tr>
        <tr class="charegRow">
            <td colspan="5"></td>
            <td>Admin%</td>
            <td class="text-right"> <label class="headinglabel" id="lbladminpercent"></label></td>
            <td></td>
            <td class="text-right"><label class="headinglabel" id="lbladminamount"></label></td>
        </tr>
        <tr class="charegRow">
            <td colspan="5"></td>
            <td>Fuel SurCharge%</td>
            <td class="text-right"><label class="headinglabel" id="lblfuelpercent"></label></td>
            <td></td>
            <td class="text-right"><label class="headinglabel" id="lblfuelamount"></label></td>
        </tr>
        <tr class="charegRow">
            <td colspan="5"></td>
            <td>Tax%</td>
            <td class="text-right"> <label class="headinglabel" id="lbltaxpercent"></label></td>
            <td></td>
            <td class="text-right"> <label class="headinglabel" id="lbltaxamount"></label></td>
        </tr>
        <tr class="charegRow">
            <td colspan="5"></td>
            <td>Clearance Charge</td>
            <td></td>
            <td></td>
            <td class="text-right"> <label class="headinglabel" id="lblothercharge"></label></td>
        </tr>
        <tr class="charegRow">
            <td colspan="5"></td>
            <td>Discount</td>
            <td></td>
            <td></td>
            <td class="text-right"> <label class="headinglabel" id="lbldiscount"></label></td>
        </tr>
        <tr class="charegRow">
            <td colspan="5"></td>
            <td><b>Net Invoice Total</b></td>
            <td></td>
            <td> </td>
            <td class="text-right"> <label class="headinglabel" style="font-weight:600" id="lblinvoicetotal">@CMSV2.Models.CommanFunctions.GetFormatNumber(@Model.InvoiceTotal, _decimal)</label></td>
        </tr>
</table>

        <script>
    $(document).ready(function () {


        $("#Selectall").change(function () {
            var i = 0;
            if ($(this).prop("checked") == true) {
                i = 1;
                $("#listContainer tbody tr").addClass('Selected');
                $(".checkfilter").prop('checked', true);
            } else {
                $("#listContainer tbody tr").removeClass('Selected');
                $(".checkfilter").prop('checked', false);
            }

             var fullform = $('form#customerInvoice').serialize();
            var cust = JSON.stringify(fullform);

              $.ajax({
                type: 'POST',
                url: '@Url.Action("GetTotalCharge", "CustomerInvoice")?Id=' + $('#CustomerID').val(),
                datatype: "json",
                data: cust ,
                success: function (response) {
                    console.log(response.data);
                    var _custdata = response.data;

                    $('#lbltotalcharge').html(addCommas(parseFloat(_custdata.TotalCharges).toFixed(@_decimal)));
                    $('#lbladminpercent').html(addCommas(parseFloat(_custdata.AdminPer).toFixed(@_decimal)));
                    $('#lbltaxpercent').html(addCommas(parseFloat(_custdata.CustomerInvoiceTax).toFixed(@_decimal)));
                    $('#lblfuelpercent').html(addCommas(parseFloat(_custdata.FuelPer).toFixed(@_decimal)));
                    $('#lblothercharge').html(addCommas(parseFloat(_custdata.OtherCharge).toFixed(@_decimal)));

                    $('#AdminAmt').val(addCommas(parseFloat(_custdata.AdminAmt).toFixed(@_decimal)));
                    $('#FuelAmt').val(addCommas(parseFloat(_custdata.FuelAmt).toFixed(@_decimal)));
                    $('#ChargeableWT').val(addCommas(parseFloat(_custdata.ChargeableWT).toFixed(@_decimal)));
                    $('#InvoiceTotal').val(addCommas(parseFloat(_custdata.InvoiceTotal).toFixed(@_decimal)));
                    $('#lbladminamount').html(addCommas(parseFloat(_custdata.AdminAmt).toFixed(@_decimal)));
                    $('#lbltaxamount').html(addCommas(parseFloat(_custdata.ChargeableWT).toFixed(@_decimal)));
                    $('#lblfuelamount').html(addCommas(parseFloat(_custdata.FuelAmt).toFixed(@_decimal)));
                    $('#lblinvoicetotal').html(addCommas(parseFloat(_custdata.InvoiceTotal).toFixed(@_decimal)));

                }
            });

        });

        $(".checkfilter").change(function () {

            var id = this.id;
            var countryid = id.split('_');
            if ($(this).prop("checked") == true) {
                $("#listContainer tbody tr[id=" + countryid[1] + "]").addClass('Selected');

            } else {
                $("#listContainer tbody tr[id=" + countryid[1] + "]").removeClass('Selected');
                $("#Selectall").prop('checked', false);
            }

             var fullform = $('form#customerInvoice').serialize();
            var cust = JSON.stringify(fullform);

              $.ajax({
                type: 'POST',
                url: '@Url.Action("GetTotalCharge", "CustomerInvoice")?Id=' + $('#CustomerID').val(),
                datatype: "json",
                data: cust ,
                success: function (response) {
                    console.log(response.data);
                    var _custdata = response.data;
                    $('#lbltotalcharge').html(addCommas(parseFloat(_custdata.TotalCharges).toFixed(@_decimal)));
                    $('#lbladminpercent').html(addCommas(parseFloat(_custdata.AdminPer).toFixed(@_decimal)));
                    $('#lbltaxpercent').html(addCommas(parseFloat(_custdata.CustomerInvoiceTax).toFixed(@_decimal)));
                    $('#lblfuelpercent').html(addCommas(parseFloat(_custdata.FuelPer).toFixed(@_decimal)));
                    $('#lblothercharge').html(addCommas(parseFloat(_custdata.OtherCharge).toFixed(@_decimal)));

                    $('#AdminAmt').val(addCommas(parseFloat(_custdata.AdminAmt).toFixed(@_decimal)));
                    $('#FuelAmt').val(addCommas(parseFloat(_custdata.FuelAmt).toFixed(@_decimal)));
                    $('#ChargeableWT').val(addCommas(parseFloat(_custdata.ChargeableWT).toFixed(@_decimal)));
                    $('#InvoiceTotal').val(addCommas(parseFloat(_custdata.InvoiceTotal).toFixed(@_decimal)));
                    $('#lbladminamount').html(addCommas(parseFloat(_custdata.AdminAmt).toFixed(@_decimal)));
                    $('#lbltaxamount').html(addCommas(parseFloat(_custdata.ChargeableWT).toFixed(@_decimal)));
                    $('#lblfuelamount').html(addCommas(parseFloat(_custdata.FuelAmt).toFixed(@_decimal)));
                    $('#lblinvoicetotal').html(addCommas(parseFloat(_custdata.InvoiceTotal).toFixed(@_decimal)));
                }
            });
        });
    });

        </script>

        