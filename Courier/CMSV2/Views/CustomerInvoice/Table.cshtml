<tbody>
    @foreach (var item in Model.Details)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerInvoiceNo)
            </td>
            <td>                
                @CMSV2.Models.CommanFunctions.GetShortDateFormat(item.InvoiceDate)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td style="text-align:right">                
                @CMSV2.Models.CommanFunctions.GetFormatNumber(item.InvoiceTotal, _decimal)

            </td>
            <td style="font-size:13px">
                @*<a target="_blank" href="ExportShipmentReport?id=@item.CustomerInvoiceID"><i class="fa fa-print"></i></a>*@
                <a class="aprint" target="_blank" href="InvoicePrint?id=@item.CustomerInvoiceID" title="Invoice Printing"><i class="fa fa-print"></i></a>

                <a class="aview" href="Details?id=@item.CustomerInvoiceID"><i class="fa fa-eye"></i></a>

                <a class="aedit" href="Edit?id=@item.CustomerInvoiceID"><i class="fa fa-pencil"></i></a>

                <a class="adelete" href="#" onclick="Delete(@item.CustomerInvoiceID)"><i class="fa fa-times"></i></a>
                <a class="" href="#" onclick="ShowReceipt(@item.CustomerInvoiceID,@item.CustomerID)">CR</a>
            </td>
        </tr>
    }
</tbody>
<script type="text/javascript">
    function Delete(ID) {
        if (confirm("Are you sure? You want to Delete this Invoice?")) {
            window.location.href = "/CustomerInvoice/DeleteConfirmed/?id=" + ID;
        }
    }
</script>

