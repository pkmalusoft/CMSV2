@model IEnumerable<CMSV2.Models.DCODReceiptVM>
@{
    int i = 0;
    var _decimal = @Session["Decimal"].ToString();  
    }

<thead>
    <tr>
        <th>
            Receipt No.
        </th>
        <th>
            Receipt Date
        </th>        
        <th>Receipt Amount</th>
        <th width="5%"></th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiptNo)
            </td>
            <td>
                @CMSV2.Models.CommanFunctions.GetShortDateFormat(item.ReceiptDate)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.Amount)

            </td>
            <td style="font-size:13px" >
                @*<a target="_blank" href="ExportShipmentReport?id=@item.CustomerInvoiceID"><i class="fa fa-print"></i></a>*@
                @*<a  class="aprint" target="_blank" href="InvoicePrint?id=@item.CustomerInvoiceID"><i class="fa fa-print"></i></a>*@

                @*<a class="aview"  href="Details?id=@item.CustomerInvoiceID"><i class="fa fa-eye"></i></a><br />*@                
                
                <a  class="aedit" href="Create?id=@item.ReceiptID"><i class="fa fa-pencil"></i></a>
                
                <a class="adelete"  href="#" onclick="Delete(@item.ReceiptID)"><i class="fa fa-times"></i></a>

            </td>
        </tr>
    }
</tbody>
<script type="text/javascript">
    function Delete(ID) {
        if (confirm("Are you sure? You want to Delete this Receipt?")) {
            window.location.href = "/CODReceipt/DeleteConfirmed/?id=" + ID;
        }
    }
</script>

