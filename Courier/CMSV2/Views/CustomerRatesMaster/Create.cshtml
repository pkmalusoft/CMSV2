                        </thead>

                    </table>
                </div>
            </div>


            <div class="row no-margin" style="padding-top: 10px">


                <div class="col-md-12 btn-right" style="padding-top: 25px">
                    <input type="submit" value="Save" class="btn btn-primary btnwidth" id="btnsave" />&nbsp;&nbsp;<a href='@Url.Action("Index", "CustomerRatesMaster", new { id = 0 })' class="btn btn-danger btnwidth" data-toggle="tooltip" data-placement="right" title="Click here">Cancel</a>
                </div>
            </div>
        </fieldset>
    }
</section>

