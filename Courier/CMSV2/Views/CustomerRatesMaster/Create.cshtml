    $(document).ready(function () {


        $(":text").css("border-radius", "5px");
        $("select").css("border-radius", "5px");

        $("#addrate").prop("disabled", true);

        $("#ZoneChartID").empty();
        $('#ZoneChartID').append('<option value="0">Select</option>');

        $("#hfAddCustomerRate").val('0');


        $("#btnsave").click(function () {
            var contractid = $("#ContractRateTypeID option:selected").val();
            var zonechartid = $("#ZoneChartID option:selected").val();
            var prodtypeid = $("#CourierServiceID option:selected").val();
            var fagentid = $("#FAgentID option:selected").val();
            var basewt = $("#BaseWt").val();
            var baserate = $("#BaseRate").val();

            if (contractid == "") {
                $("#validations").show();
                return false;
            }
            else if (zonechartid == "") {
                $("#validations").show();
                return false;
            }
            else if (prodtypeid == "") {
                $("#validations").show();
                return false;
            }
            else if (fagentid == "") {
                $("#validations").show();
                return false;
            }
            else if (basewt == "") {
                $("#validations").show();
                return false;
            }
            else if (baserate == "") {
                $("#validations").show();
                return false;
            }
            else {
                $("#validations").hide();
                return true;
            }
        });


        $("#BaseWt").blur(function () {
            var wt = $(this).val();
            var newwt = parseFloat(wt) + 0.001;
            $("#addwtfrom").val(newwt.toFixed(3));
            $("#BaseWt").val(parseFloat(wt).toFixed(3));
            $("#BaseRate").focus();

        });
        $("#BaseRate").blur(function () {
            var wt = $(this).val();

            $("#BaseRate").val(parseFloat(wt).toFixed(2));

        });
        $("#ZoneChartName").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: '/CustomerRatesMaster/GetZoneByCustomer',
                    datatype: "json",
                    data: {
                        term: request.term, contractid: $("#ContractRateTypeID").val()
                    },
                    success: function (data) {
                        response($.map(data, function (val, item) {
                            return {
                                label: val.ZoneName,
                                value: val.ZoneID,                                
                            }
                        }))
                    }
                })
            },
            minLength: 1,
            autoFocus: false,
            focus: function (event, ui) {
                $("#ZoneChartName").val(ui.item.label);
                $("#ZoneChartID").val(ui.item.value);
            },
            select: function (e, i) {
                e.preventDefault();
                $("#ZoneChartName").val(i.item.label);
                $("#ZoneChartID").val(i.item.value);

            },
        });

        //$("#ContractRateTypeID").change(function () {
        //    $("#ZoneChartID").empty();
        //    $('#ZoneChartID').append('<option value="0">Select</option>');

        //    $.ajax({
        //        type: "POST",
        //        url: "/CustomerRatesMaster/GetZoneByCustomer",
        //        datatype: "Json",
        //        data: { contractid: $("#ContractRateTypeID option:selected").val() },
        //        success: function (data) {


        //            $.each(data, function (index, value) {
        //                $('#ZoneChartID').append('<option value="' + value.ZoneID + '">' + value.ZoneName + '</option>');
        //            });

        //        }
        //    });
        //});

        $("#contractrate").blur(function () {
            var rowCount = $('#details tr').length - 1;

            if (rowCount == 0 || $("#hfAddCustomerRate").val() == 0) {
                if ($("#BaseRate").val() != "" && $("#contractrate").val() != "") {
                    var AddittionalRate = parseFloat($("#contractrate").val()) - parseFloat($("#BaseRate").val());

                    $("#addrate").val(AddittionalRate.toFixed(2));
                }
            }
            else {


                var decAdditionalRate;
                var x = $("#details tr:last td:nth-child(4)");

                var c = $(x).text();
                decAdditionalRate = parseFloat($("#contractrate").val()) - parseFloat(c);

                $("#addrate").val(decAdditionalRate.toFixed(2));
            }

            var w = $(this).val();
            $(this).val(parseFloat(w).toFixed(2));

            $("#hfAddCustomerRate").val(parseInt(rowCount) + 1);
        });

        $("#addwtto").blur(function () {
            if ($(this).val() < $("#addwtfrom").val()) {
                $(".outrange").show();
                $(this).focus();
            }
            else {
                var wt = $(this).val();
                $(this).val(parseFloat(wt).toFixed(3));
                $(".outrange").hide();

                var addwtfrm = $("#addwtfrom").val();
                var incr = parseFloat(wt) - parseFloat(addwtfrm);

                $("#incrwt").val(parseFloat(incr).toFixed(3));

                $("#incrwt").focus();
            }
        });

        $("#incrwt").blur(function () {
            var wt = $(this).val();
            $(this).val(parseFloat(wt).toFixed(3));

        });

        $("#btnadd").click(function () {
            if (CheckForNull() == true) {
                var i = $('#details tr').length - 1;

                //$("#details").append('<tr>' + '<td>' + $("#addwtfrom").val() + '<input type="hidden" value=' + $("#addwtfrom").val() + ' name="CustRateDetails[' + i + '].AddWtFrom"></td>' +
                //    '<td>' + $("#addwtto").val() + '<input type="hidden" value=' + $("#addwtto").val() + ' name="CustRateDetails[' + i + '].AddWtTo"></td>' + '<td>' + $("#incrwt").val() + '<input type="hidden" value=' + $("#incrwt").val() + ' name="CustRateDetails[' + i + '].IncrWt"></td>' + '<td>' + $("#contractrate").val() + '<input type="hidden" value=' + $("#contractrate").val() + ' name="CustRateDetails[' + i + '].ContractRate"></td>' + '<td>' + $("#addrate").val() + '<input type="hidden" class="crate" value=' + $("#addrate").val() + ' name="CustRateDetails[' + i + '].AddRate"></td>' +
                //    '<td><a href="javascript:void(0)" onclick="check(this)" value="Click"><i class="fa fa-pencil"></i></a></td>' +
                //    '<td><a href="javascript:void(0)" onclick="deletetrans(this,' + i + ')"><i class="fa fa-times"></i></a></td>' +
                //    '</tr> ');

                var html = '<tr><td><input class="hdndeleted" type="hidden" name="CustRateDetails[' + i + '].Deleted" value = "false" id = "hdndeleted_' + i + '" /><input type="text" class="text-right" value="' + $("#addwtfrom").val() + '" name="CustRateDetails[' + i + '].AddWtFrom" /></td>' +
                     '<td><input type="text"class="text-right"  value="' + $("#addwtto").val() + '" name="CustRateDetails[' + i + '].AddWtTo"></td>' +
                     '<td><input type="text" class="text-right" value="' + $("#incrwt").val() + '" name="CustRateDetails[' + i + '].IncrWt"></td>' +
                     '<td><input type="text" class="text-right" value="' + $("#contractrate").val() + '" name="CustRateDetails[' + i + '].ContractRate"></td>' +
                     '<td><input type="text" class="text-right crate" value="' + $("#addrate").val() + '" name="CustRateDetails[' + i + '].AddRate"></td>' +
                     //'<td><a href="javascript:void(0)" onclick="check(this)" value="Click"><i class="fa fa-pencil"></i></a></td>' +
                    '<td><a href="javascript:void(0)" onclick="deletetrans(this,' + i + ')"><i class="fa fa-times"></i></a></td>' +
                    +'</tr>';
                $("#details").append(html);

                $("#addwtfrom").val('');
                $("#addwtto").val('');
                $("#incrwt").val('');
                $("#contractrate").val('');
                $("#addrate").val('');

                var x = $("#details tr:last td:nth-child(2)");
                var c = $(x).text();
                var decAdditionalRate = (parseFloat(c) + 0.001).toFixed(3);

                $("#addwtfrom").val(decAdditionalRate);
            }
            //}

            $("#addwtto").focus();
        });

         if (@ViewBag.EditMode== true) {
             DisplayRateDetails();
             $("#ContractRateTypeID").trigger('change');
             
    }
       


    });
    function deletetrans(obj, i) {
        $(obj).parent().parent().addClass('hide');
        var obj1 = $(obj).parent().parent().find('.hdndeleted');
        $(obj1).val(true);
    }
    function ClearData() {
        $("#addwtfrom").val('');
        $("#addwtto").val('');
        $("#incrwt").val('');
        $("#contractrate").val('');
        $("#addrate").val('');
    }
    function check(x) {

        var crow = $(x).parent("td").parent("tr");
        currentindex = $(crow).index('this');
        nextindex = parseInt(currentindex) + 1;

        var addwtfrm = $(crow).find("td:eq(0)").find('input[type=hidden]').val();
        var addwtto = $(crow).find("td:eq(1)").find('input[type=hidden]').val();
        var incrwt = $(crow).find("td:eq(2)").find('input[type=hidden]').val();
        var contract = $(crow).find("td:eq(3)").find('input[type=hidden]').val();
        var addrate = $(crow).find("td:eq(4)").find('input[type=hidden]').val();

        $("#addwtfrom").val(addwtfrm);
        $("#addwtto").val(addwtto);
        $("#incrwt").val(incrwt);
        $("#contractrate").val(contract);
        $("#addrate").val(addrate);
        flagedit = 1;


    }

    function CheckForNull() {

        if ($("#addwtfrom").val() == "" || $("#addwtto").val() == "" || $("#incrwt").val() == "" || $("#contractrate").val() == "" || $("#addrate").val() == "") {
            $(".error").show();
            return false;
        }
        else {
            $(".error").hide();
            return true;
        }
    }
</script>
<section class="content-header">
    <h1 class="headingfont">@ViewBag.Title</h1>

</section>


<section class="content">
    @using (@Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div id="validations" style="color: red; margin-left: 7px; display: none">* Please fill mandatory fields</div>
        <fieldset>
            <div class="row no-margin">
                <div class="col-md-3">                    
                    @Html.HiddenFor(model => model.CustomerRateID)
                    @Html.HiddenFor(model => model.CustomerRateTypeID)                   
                    <label class="headinglabel required">Contract Name</label>
                    @Html.DropDownListFor(model => model.ContractRateTypeID, new SelectList(@ViewBag.CustRate, "CustomerRateTypeID", "CustomerRateType1"), "Select", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ContractRateTypeID)
                </div>


                <div class="col-md-3">
                    <label class="headinglabel required">Zone</label>
                    @*@Html.DropDownListFor(model => model.ZoneChartID, new SelectList(@ViewBag.Zones, "ZoneChartID", "ZoneChartID"), "Select", new { @class = "form-control", @value1 = Model.ZoneChartID })*@
                    @Html.TextBoxFor(model => model.ZoneChartName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ZoneChartID)
                    @Html.HiddenFor(model => model.ZoneChartID)

                </div>

                <div class="col-md-3">
                    <label class="headinglabel required">Product Name</label>
                    @Html.DropDownListFor(model => model.ProductTypeID, new SelectList(@ViewBag.ProductType, "ProductTypeID", "ProductName"), "Select", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ProductTypeID)

                </div>

                <div class="col-md-3">
                    <label class="headinglabel required">Forwarding Agent</label>
                    @Html.DropDownListFor(model => model.FAgentID, new SelectList(@ViewBag.ForwardingAgent, "FAgentID", "FAgentName"), "Select", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FAgentID)

                </div>


            </div>

            <div class="row no-margin" style="padding-top: 10px">

                <div class="col-md-3">
                    <label class="headinglabel required">Base Weight</label>
                    @Html.TextBoxFor(model => model.BaseWt, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.BaseWt)
                    @Html.HiddenFor(model => model.hfAddCustomerRate)
                </div>

                <div class="col-md-3">
                    <label class="headinglabel required">Base Rate</label>
                    @Html.TextBoxFor(model => model.BaseRate, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.BaseRate)

                </div>
                <div class="col-md-2 checkboxdesign" style="padding-top: 20px">

                    @Html.CheckBoxFor(model => model.withtax)&nbsp;&nbsp;<label class="headinglabel">With Tax</label>
                    @Html.ValidationMessageFor(model => model.withtax)




                </div>
                <div class="col-md-2 checkboxdesign" style="padding-top: 20px">

                    @Html.CheckBoxFor(model => model.withouttax)&nbsp;&nbsp;<label class="headinglabel">Without Tax</label>
                    @Html.ValidationMessageFor(model => model.withouttax)

                </div>
                


                    <div class="col-md-2 checkboxdesign">

                        @Html.CheckBoxFor(model => model.AdditionalCharges)&nbsp;&nbsp;<label class="headinglabel">Additional Charges</label>
                        @Html.ValidationMessageFor(model => model.AdditionalCharges)

                    </div>
                


            </div>


            <div class="row no-margin" style="padding-top: 10px">
                <div class="col-md-12">
                    <h3 style="color: white">Weight Details</h3>
                    <hr />
                </div>
            </div>
            <div class="row no-margin" style="padding-top: 30px">
                <div class="error" style="color: red; display: none">* Please Add All the Fields</div>
                <div class="col-md-2">
                    <label class="headinglabel">Add Wt From</label>
                    <input type="text" id="addwtfrom" class="form-control" />

                </div>
                <div class="col-md-2">
                    <label class="headinglabel">Add Wt To</label>&nbsp;&nbsp;
                    <label class="outrange" style="color: red; display: none">Out Of Range</label>
                    <input type="text" id="addwtto" class="form-control" />

                </div>
                <div class="col-md-2">
                    <label class="headinglabel">Incr Wt</label>
                    <input type="text" id="incrwt" class="form-control" />

                </div>

                <div class="col-md-2">
                    <label class="headinglabel">Contract Rate</label>
                    <input type="text" id="contractrate" class="form-control" />

                </div>
                <div class="col-md-2">
                    <label class="headinglabel">Add Rate</label>
                    <input type="text" id="addrate" class="form-control" />

                </div>
                <div class="col-md-2 btn-right">
                    @*<input type="button" value="Add" id="btnadd" class="btn btn-primary" />&nbsp;&nbsp;
                    <input type="button" value="Cancel" id="btncancel" class="btn btn-danger" />*@
                    <button type="button" class="btn btn-primary small_btn mt-0" title="Clear Data"  id="btncancel" onclick="ClearData()"><i class="fa fa-minus"></i></button>&nbsp;&nbsp;
                    <button type="button" class="btn btn-primary small_btn mt-0" index="1" id="btnadd" title="Add New"><i class="fa fa-plus"></i></button>
                </div>
            </div>

            <div class="row no-margin" style="padding-top: 10px">
               

            </div>

            <div class="row no-margin" style="padding-top: 10px">
                <div class="col-md-12">
                    <table class="table table-bordered table-responsive" id="details" style="background-color: white">

                        <thead>

                        <th>Add Wt. From</th>
                        <th>Add Wt. To</th>
                        <th>Incr. Wt.</th>
                        <th>Contract Rate</th>
                        <th>Add Rate</th>
                        <th></th>                        
