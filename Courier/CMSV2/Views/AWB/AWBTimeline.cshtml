@model  CMSV2.Models.AWBTracking
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_TrueBookMstr.cshtml";
}
<section class="content-header">
    <div class="row">
        <div class="col-md-5 pull-left">
            <h1 class="headingfont">AirWay Bill Time Line</h1>
        </div>
    </div>
</section>
<style>
    ul {
        list-style: none;
        padding: 0;
    }

    .timelineLeft {
        padding-right: 4px;
    }

    .form-group{
        margin-bottom: 5px;
    }
    .timelineRight {
        padding-left: 4px;
    }

    .timelineRow h4 {
        font-size: 15px;
        font-weight: bold;
    }

    .timelineRow::before {
        content: '';
        position: absolute;
        width: 8px;
        height: 100%;
        left: 0;
        right: 0;
        display: block;
        margin: auto;
        background: #222;
    }

    .timelineRow li {
        position: relative;
        margin-bottom: 20px;
        padding-right: 10px;
        padding-top: 5px;
    }

    .timelineRight li {
        padding-left: 10px;
    }

    .timelineRow li:after {
        content: '';
        height: 7px;
        display: block;
        text-align: right;
        position: absolute;
    }
    .pl-2{
        padding-left:10px;
    }

    .timelineRow li:nth-of-type(1):after {
        background: #fb9643;
        width: 100px;
    }

    .timelineRow li:nth-of-type(2):after {
        background: #4bacc6;
        width: 140px;
    }

    .timelineRow li:nth-of-type(3):after {
        background: #8064a2;
        width: 180px;
    }

    .timelineRow li:nth-of-type(4):after {
        background: #a1c557;
        width: 210px;
    }

    textarea{
        resize: none;
        height:100px;
    }
    .timelineRow li:nth-of-type(5):after {
        background: #ce504c;
        width: 230px;
    }

    .timelineLeft li::after {
        right: 0;
    }

    .timelineRight li::after {
        left: 0;
    }

    .timelineBlock {
        padding: 50px 0;
    }
    /*.timelineRow{

        }*/
    .timelineDetails > .col-md-6 {
        margin: auto;
        float: none;
    }

    .timelineDetails {
        margin-bottom: 50px;
    }

    .timelinedata h4 {
        color: #07a7e3;
    }

    .timelineDetails h4 {
        font-weight: bold;
    }

    .address{
        border:1px solid #ccc;
        padding:10px;
        margin-bottom: 10px;
    }
    .Aiwaybillcontrol {
        float: none;
        margin: auto;
    }

    h4 {
        font-size: 15px;
    }
</style>



<section class="timelineBlock">
    <div class="container-fluid">

        <div class="row">
            @using (@Html.BeginForm("AWBTimeline", "AWB", FormMethod.Post))
            {

            <div class="col-md-6 timelineDetails">
                    <div class=" Aiwaybillcontrol">
                         <div class="row">
                            <div class="col-md-5">
                                <div class="form-group ">
                                    <label class="headinglabel">AIRWAY BILL: </label>
                                     @Html.TextBoxFor(model => model.AWBNo, new { @class = "form-control", @required = true })
                                </div>
                            </div>
                        <div class="col-md-1 mt-3" style="padding-top:30px">
                            <button type="submit" class="btn btn-primary" style="min-width:50px!Important;" id="btnsearch"><i class="fa fa-refresh" aria-hidden="true"></i></button>
                        </div>

                    </div>

                </div>


                <div class="form-group">
                    <div class="row">
                    <div class="col-md-6">
                            <label>Shipper</label>
                            <input type="text" name="" class="form-control" value="@Model.AWB.Consignor" />
                    </div>

                    <div class="col-md-6">

                        <label>Receiver</label>
                        <input type="text" name="" class="form-control" value="@Model.AWB.Consignee" />

                    </div>
                    </div>
                 </div>

                    <div class="form-group">
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="address">
                                    <h4>@Model.AWB.ConsigneeAddress1_Building  &nbsp; &nbsp; @Model.AWB.ConsigneeAddress2_Street <br/> @Model.AWB.ConsigneeAddress3_PinCode </h4>
                                    <h4>@Model.AWB.ConsigneeAddress3_PinCode</h4>
                                </div> 

                            </div>

                            <div class="col-md-6">
                                <div class="address">
                                    <h4>@Model.AWB.ConsigneeAddress1_Building &nbsp;&nbsp; @Model.AWB.ConsigneeAddress2_Street <br/> @Model.AWB.ConsigneeAddress3_PinCode</h4>
                                    <h4>@Model.AWB.ConsigneePhone</h4>

                                </div>

                            </div>


                        </div>

                    </div>


                    <div class="form-group">
                        <div class="row">
                    <div class="col-md-6">
                            <label>origin</label>
                            <input type="text" name="" class="form-control" value="@Model.AWB.ConsignorCountryName" />
                    </div>

                    <div class="col-md-6">

                        <label>Destination</label>
                        <input type="" name="" class="form-control" value="@Model.AWB.ConsigneeCountryName"/>

                    </div>
                    </div>
                </div>

                   

                    <div class="form-group">
                        <div class=" row">
                        <div class="col-md-3 flex flex-wrap">

                                <div>
                                    <label>Pieces</label>
                                    <input type="text" name="" class="form-control" value="@Model.AWB.Pieces"/>
                                </div>

                                <div class="pl-2">

                                    <label>Weight</label>
                                    <input type="" name="" class="form-control" value="@Model.AWB.Weight"/>

                                 </div>

                        </div>

                        

                        <div class="col-md-2">
                                <label>Courier Charge</label>
                                <input type="" name="" class="form-control" value="@Model.AWB.CourierCharge"/>
                        </div>

                        <div class="col-md-2">

                            <label>Other Charge</label>
                            <input type="" name="" class="form-control" value="@Model.AWB.OtherCharge" />

                        </div>

                         <div class="col-md-2">
                                <label>Tax Amount</label>
                                <input type="" name="" class="form-control" value="@Model.AWB.TaxAmount"/>
                        </div>

                        <div class="col-md-3 flex">

                            <div>
                            <label>T. Charge</label>
                            <input type="" name="" class="form-control" value="@Model.AWB.totalCharge"/>

                        </div>
                            <div class="pl-2">

                                <label>M. Cost</label>
                                <input type="" name="" class="form-control" value="@Model.AWB.materialcost" />

                            </div>

                    </div>
                </div>

                    </div>

                    <div class="form-group">

                        <div class="row">
                            <div class="col-md-3">
                                <label>Shipper Instruction</label>
                                <input type="" name="" class="form-control" value="@Model.AWB.SpecialNotes" />
                            </div>
                             <div class="col-md-6">
                                <label>Item Description</label>
                                <input type="" name="" class="form-control" value="@Model.AWB.Description"/>
                            </div>

                            <div class="col-md-3">
                                <label>Payment Mode</label>
                                <input type="" name="" class="form-control" value="@Model.AWB.paymentmode"/>
                            </div>

                        </div>
                    </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-4">
                                    <label>COD Status</label>
                                </div> 
                                <div class="col-md-8">
                                    <input type="" name="" class="form-control" value="@Model.AWB.CODStatus"/>
                                </div>       

                            </div>
                             <div class="row">
                                <div class="col-md-4">
                                    <label>Material Cost Status</label>
                                </div> 
                                <div class="col-md-8">
                                    <input type="" name="" class="form-control" value="@Model.AWB.MaterialCostStatus"/>
                                </div>       

                            </div>

                        </div>

                    
            </div>


                <div class="col-md-5 timelineRow">
                    <div class="timelineLeft col-md-6 text-right">

                        <ul>
                            @foreach (var item in Model.Details)
                            {
                                if (item.CourierStatusId <= 4)
                                {
                                    <li>
                                        <p>@CMSV2.Models.CommanFunctions.GetShortDateFormat(@item.EntryDate)</p>
                                        <h4>@item.CourierStatus</h4>
                                    </li>
                                }
                            }


                            @*<li>
                            <p>22-07-2020 <span>10.30 Am</span></p>
                            <h4>Pick Up Request</h4>
                        </li>
                        <li>
                            <p>22-07-2020 <span>10.30 Am</span></p>
                            <h4>Assigned for Collection </h4>
                        </li>
                        <li>
                            <p>22-07-2020 <span>10.30 Am</span></p>
                            <h4>Collection Attempt</h4>
                        </li>
                        <li>
                            <p>22-07-2020 <span>10.30 Am</span></p>
                            <h4>Collected</h4>
                        </li>
                        <li>
                            <p>22-07-2020 <span>10.30 Am</span></p>
                            <h4>Received at Facility</h4>
                        </li>*@
                        </ul>
                    </div>
                    <div class="clearfix"></div>
                    <div class="timelineRight col-md-6 pull-right">
                        <ul>
                            @foreach (var item in Model.Details)
                            {
                                if (item.CourierStatusId > 4)
                                {
                                    <li>
                                        <p>@CMSV2.Models.CommanFunctions.GetShortDateFormat(@item.EntryDate)</p>
                                        <h4>@item.CourierStatus</h4>
                                    </li>
                                }
                            }
                            @*<li>
                            <p>22-07-2020 <span>10.30 Am</span></p>
                            <h4>Sorting in process</h4>
                        </li>
                        <li>
                            <p>22-07-2020 <span>10.30 Am</span></p>
                            <h4>Assigned for Collection </h4>
                        </li>
                        <li>
                            <p>22-07-2020 <span>10.30 Am</span></p>
                            <h4>Collection Attempt</h4>
                        </li>
                        <li>
                            <p>22-07-2020 <span>10.30 Am</span></p>
                            <h4>Collected</h4>
                        </li>
                        <li>
                            <p>22-07-2020 <span>10.30 Am</span></p>
                            <h4>Received at Facility</h4>
                        </li>*@
                        </ul>
                    </div>
                    <div class="clearfix"></div>
                </div>
            }
            </div>
    </div>
    
</section>