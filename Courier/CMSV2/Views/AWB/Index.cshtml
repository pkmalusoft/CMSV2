                                @CMSV2.Models.CommanFunctions.GetDecimalFormat(@item.totalCharge, "2")
                                @*@Html.DisplayFor(modelItem => item.totalCharge)*@
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CourierStatus)
                            </td>
                            <td>
                                <span class="colorblue" title="Created Detail">@Html.DisplayFor(modelItem => item.CreatedByDate) - @Html.DisplayFor(modelItem => item.CreatedByName) </span>
                                <br />
                                <span class="colorred" title="Modified Detail">@Html.DisplayFor(modelItem => item.LastModifiedDate) - @Html.DisplayFor(modelItem => item.LastModifiedByName)</span>
