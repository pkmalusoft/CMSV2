@model CMSV2.Models.MCDatePicker
@{
    Layout = null;
}

<style>
#invoicesearch .row .col-md-1 {
    width: 12%;
} 
#FormDate{
    border-radius:10px;
}
.searchMc{
    border: 1px solid #ccc;
    position: relative;
    padding: 20px 10px;
}
.searchMc h4{
    padding: 0 30px;
    position: ABSOLUTE;
    top: -21px;
    display: inline-block;
    left: 22px;
    background: #f8fbff;
    text-align: center;
}
</style>

<script>
    function optionchange() {
        if ($('#chkDateWise').prop('checked') == true) {
            $('#FromDate').removeAttr('readonly');
            $('#ToDate').removeAttr('readonly');
            $('#AWBNo').attr('readonly', 'readonly');
            $('#Shipper').attr('readonly', 'readonly');
            $('#SearchOption').val('Date');
        }
        else if ($('#chkAWBWise').prop('checked') == true) {
            $('#FromDate').attr('readonly', 'readonly');
            $('#ToDate').attr('readonly', 'readonly');
            $('#AWBNo').removeAttr('readonly');
            $('#Shipper').attr('readonly', 'readonly');
            $('#SearchOption').val('AWBNo');
        }
        else {
            $('#FromDate').attr('readonly', 'readonly');
            $('#ToDate').attr('readonly', 'readonly');
            $('#AWBNo').attr('readonly', 'readonly');
            $('#Shipper').removeAttr('readonly');
            $('#SearchOption').val('Shipper');

        }
    }
     var customernames = [];
    $(document).ready(function () {
        if ($('#SearchOption').val() == 'Date') {
          $('#chkDateWise').prop('checked',true)
        }
        else if ($('#SearchOption').val() == 'AWBNo') {
            $('#chkAWBWise').prop('checked', true)
        }
        else if ($('#SearchOption').val() == 'Shipper') {
            $('#chkShipperWise').prop('checked', true)
        }


        $('#btnsearch').click(function () {           
          
        
        })
       
    });        

</script>
@using (Html.BeginForm("MCAWBSearch", "MCManagement", FormMethod.Post, new { @id = "awbsearch" }))
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    
<div class="row no-margin searchMc ">
     <h4>Search</h4>
    <div class="col-md-11 datefilters" >
       
                          
                <div class="col-md-2 field checkboxdesign">
                    <label class="headinglabel"><input type="radio" id="chkDateWise" name="search1" onclick="optionchange()" />AWB Date</label>

                </div>

                    <div class="col-md-2">
                        <label class="headinglabel required ">From Date</label>
                        @Html.TextBoxFor(model => model.FromDate, new { @class = "form-control text-right" })
                    </div>
                    <div class="col-md-2">
                        <label class="headinglabel required">To Date</label>
                        @Html.TextBoxFor(model => model.ToDate, new { @class = "form-control text-right" })
                    </div>
                
                <div class="col-md-3 field">
                   
                    <label class="headinglabel"><input type="radio" id="chkAWBWise" name="search1" onclick="optionchange()" />Airway Bill</label>
               
                  <div >
                     @Html.TextBoxFor(model => model.AWBNo, new { @class = "form-control" ,@readonly="readonly"})
                  </div>
                </div>
              
                <div class="col-md-3 field ">
                   
                        <label class="headinglabel"><input type="radio" id="chkShipperWise" name="search1" onclick="optionchange()"/>Shipper/Consignor</label>

                        <div >

                         @Html.TextBoxFor(model => model.Shipper, new { @class = "form-control", @readonly = "readonly" })
                    @Html.HiddenFor(model => model.SearchOption, new { @class = "form-control" })
                </div>
                    
                </div>
              
            </div>          

    <div class="col-md-1 text-right">
        <button class="btn btn-primary" type="submit" id="btnsearch" style="margin-top:30px;width: 60px!Important;min-width: 50px!important;"><i class="fa fa-refresh" aria-hidden="true"></i></button>
    </div>
</div>
   
}


